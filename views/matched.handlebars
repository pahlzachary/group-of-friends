<div class="row">
     <div class="col s12 center-align">
          <h2 class="text-white">Your Matched Campfires</h2>
     </div>
</div>
{{#each groupInfo}}
<div class="row">
     <div class="col s12 center-align">
          <h3 class="text-white">{{this.group_name}}, {{this.activity_title}}</h3>
          <p class="text-white group-email">Contact Info: {{this.group_email}}<p>
          <p class="text-white">Activity Date: {{format_date this.activity_date}}</p>
          <p class="text-white">Activity Location: {{this.group_location}}</p>
          <p class="text-white">Description: {{this.activity_description}}</p>
     </div>
</div>
{{else}}
<div class="row">
     <div class="col s12">
          <p class="text-white">No matches yet.</p>
     </div>
</div>
{{/each}}