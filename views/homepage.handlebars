<ul class="group-list">
  {{#if loggedOut }}
  {{#each groups as |group|}}

  <li>
    {{> group-info group }}
  </li>
  {{/each}}
  {{/if}}
</ul>

<ul class="single-group">
{{#if loggedIn}}
<li>
  {{> group-info singleGroup}} 

  {{!-- singlegroup and userid needs to come from controller --}}

</li>
<button class="yes" data-groupId = {{singleGroup.id}} data-userId = {{userId}}>✅</button>
<button class= "no">❌</button>
</ul>

<p class= "email" style = "display:none">
{{singleGroup.email}}
</p>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/match.js"></script>
{{/if}}